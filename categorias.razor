            </MudSelect>

            @if (!string.IsNullOrEmpty(_form.Recurrencia) && _form.Recurrencia != "ninguna")
            {
                <MudTextField Label="Monto"
                              @bind-Value="_form.MontoDecimal"
                              Required="true"
